<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="140dp"
    >


    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_btnregresar"
        android:background="@drawable/regresar"
        android:stateListAnimator="@null">

    </Button>


</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="590dp"
        android:background="@drawable/color">


        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:text="Sera atendido por:"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"></TextView>

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Nombre de la persona"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:id="@+id/nombre"
            ></TextView>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/llamar"
            android:stateListAnimator="@null"
            android:id="@+id/id_llamar">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/conversacion"
            android:stateListAnimator="@null"
            android:id="@+id/id_texto"></Button>
    </RelativeLayout>




</RelativeLayout>