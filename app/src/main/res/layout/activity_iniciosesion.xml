<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/color">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        >


<EditText
    android:layout_width="240dp"
    android:layout_height="40dp"
    android:background="@drawable/coloredit"
    android:hint="Nombre de usuario"
    android:gravity="center"
    android:layout_marginBottom="1dp"
    android:id="@+id/id_nombre">

</EditText>

  <LinearLayout
      android:layout_width="200dp"
      android:layout_height="30dp"
      android:orientation="horizontal">

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:id="@+id/id_botonrecordar">

        </CheckBox>


        <TextView
            android:layout_width="1400dp"
            android:layout_height="20dp"
            android:text="Recordar contraseña"
            android:textSize="11sp"
            >

        </TextView>

  </LinearLayout>

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/coloredit"
        android:hint="Contraseña"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:id="@+id/id_contraseña">

    </EditText>


        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:backgroundTint="#BFE1EA"
            android:text="Olvidé contraseña"
            android:textSize="7sp"
            android:gravity="center"
            android:id="@+id/id_botonolvidar"
            android:stateListAnimator="@null"

            >

        </Button>

        <Button
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/colorboton"
            android:text="Iniciar Sesión"
            android:layout_marginTop="5dp"
            android:id="@+id/id_botoniniciarsesion"
            android:stateListAnimator="@null"
            ></Button>

        <Button
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/colorboton"
            android:text="Registrarse"
            android:layout_marginTop="20dp"
            android:id="@+id/id_botonregistro"
            android:stateListAnimator="@null"
            ></Button>


    </LinearLayout>

    <Button
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:text="Ver terminos y condiciones"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:textSize="10sp"
        android:background="@drawable/coloredit"
        android:id="@+id/id_botonterminos"
        android:stateListAnimator="@null"
        ></Button>


</RelativeLayout>